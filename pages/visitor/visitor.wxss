/* pages/visitor/visitor.wxss */
.loading,.finish,.no-data{
  text-align: center;
  color: #999;
  font-size: 28rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.box-0{
  display: flex;
  margin: 0rpx 20rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  padding: 20rpx;
  box-shadow: 2rpx 0rpx 2rpx rgba(0,0,0,0.1), 0rpx 2rpx 2rpx rgba(0,0,0,0.1);
  border-radius: 10rpx;
}
.box-0-0{
  width: 96rpx;
  height: 96rpx;
}
.box-0-0 image{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.box-0-1{
  flex: 1;
  padding: 0 40rpx;
  overflow: hidden;
}
.box-0-2{
  width: 96rpx;
  height: 96rpx;
  line-height: 96rpx;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  background-color: #02a7f0;
  border-radius: 8rpx;
}
.box-0-1-0{
  font-size: 28rpx;
  line-height: 32rpx;
  display: flex;
  height: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.box-0-1-0-0{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.box-0-1-0-1{
  width: 48rpx;
  text-align: center;
  color: #fff;
  border-radius: 8rpx;
  height: 32rpx;
  line-height: 32rpx;
  background-color: #02a7f0;
  margin-left: 20rpx;
  min-width: 48rpx;
}
.box-0-1-0-2{
  width: 48rpx;
  text-align: center;
  color: #fff;
  border-radius: 8rpx;
  height: 32rpx;
  line-height: 32rpx;
  background-color:#f59a23;
  margin-left: 20rpx;
  min-width: 48rpx;
}
.box-0-1-1{
  display: flex;
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.box-0-1-1 .icondianhua{
  color: #02a7f0;
}
.box-0-1-2{
  font-size: 20rpx;
  color: #9e9e9e;
}