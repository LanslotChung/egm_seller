.box-2{
  height: 100vh;
  background-color: #e0e0e0;
  overflow: hidden;
}
.box-2-0{
  height: 380rpx;
  margin: 20rpx;
}
.box-2-0-0-0{
  height:280rpx;
  background-color: #f0f0f0;
  position: relative;
}
.box-2-0-0-0-0{
  height: 280rpx;
}
.box-2-0-0-0-0 image{
  display: block;
  width: 100%;
  height: 100%;
}
.box-2-0-0-0-1{
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -66rpx;
  margin-top: -66rpx;
  height: 100rpx;
  width: 100rpx;
  padding: 16rpx;
  border-radius: 70rpx;
  background-color: rgba(74,37,150,.2);
}
.box-2-0-0-0-2{
  display: flex; 
  justify-content: center;
  align-items: center;
  position: absolute;
  width: 100%;
  height: 50rpx;
  background-color: #F00;
  top: 0rpx;
  color: #fff;
  text-align: center;
}
.box-2-0-0-0-1-0{
  width: 96rpx;
  height: 96rpx;
  border: 2rpx solid #fff;
  color: #fff;
  border-radius: 50rpx;
  font-size: 20rpx;
  line-height: 96rpx;
  text-align: center;
}
.box-2-0-0-1{
  height: 80rpx;
  padding: 10rpx 20rpx;
  display: flex;
  background-color: rgba(255, 255, 255, 1);
}
.box-2-0-0-1-0{
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.box-2-0-0-1-0 image{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.box-2-0-0-1-1{
  flex: 1;
  padding-left: 20rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.box-2-0-0-1-1-0{
  font-size: 28rpx;
  color: #161616;
}
.box-2-0-0-1-1-1{
  display: flex;
  padding-bottom: 6rpx;
}
.box-2-0-0-1-1-1-0{
  background-color: #ebebeb;
  color: #161616;
  font-size: 16rpx;
  height: 24rpx;
  line-height: 24rpx;
  border-radius: 6rpx;
  padding: 0 8rpx;
  margin-right: 10rpx;
}
.box-2-0-0-1-2{
  text-align: right;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.box-2-0-0-1-2-0,.box-2-0-0-1-2-1{
  display: flex;
  font-size: 22rpx;
  justify-content: flex-end;
  height: 40rpx;
  line-height: 40rpx;
}
.box-2-0-0-1-2-0 .iconloc-s{
  font-size: 28rpx;
  margin-right: 6rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #4274f2;
}
.box-2-0-0-1-2-1{
  color: #161616;
  font-size: 18rpx;
}
.box-2-0-0-1-2-1 .iconliulan{
  margin-right: 6rpx;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 44rpx;
}